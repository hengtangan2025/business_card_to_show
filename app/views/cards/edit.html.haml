.card-form-page
  .title
    %h2 修改名片
  = simple_form_for @card do |f|
    .field
      = f.input :name, label: false ,input_html:{:class => 'form-control',placeholder: '昵称'}
    .field
      = f.input :qq_code, label: false ,input_html:{:class => 'form-control', placeholder: 'qq号'}
    .field
      = f.input :we_chat_code, label: false ,input_html:{:class => 'form-control', placeholder: '微信号'}
    .field
      = f.input :mail, label: false ,input_html:{:class => 'form-control', placeholder: 'mail'}
    .field
      = f.input :phone_num, label: false ,input_html:{:class => 'form-control', placeholder: '手机号'}
    .field
      = f.input :company, label: false ,input_html:{:class => 'form-control', placeholder: '单位'}
    .field
      = f.input :introduction, label: false ,input_html:{:class => 'form-control', placeholder: '自我介绍'}
    .field
      = f.label "上传头像"
      = f.file_field :head_file
    .field
      = f.label "上传微信账号二维码"
      = f.file_field :we_chat_file
    .field
      = f.button :submit, "提交",:class => 'btn btn-default .btn-form-crt'