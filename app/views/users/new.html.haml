= simple_form_for @user do |f|
  .field
    = f.input :name, input_html:{:class => 'form-control',placeholder: '用户名'}
  .field
    = f.input :phone_num, input_html:{:class => 'form-control', placeholder: '手机号'}
  .field
    = f.input :password, input_html:{:class => 'form-control', placeholder: '密码',type:'password'}
  .field
    = f.input :password_confirmation, input_html:{:class => 'form-control', placeholder: '重复输入密码',type:'password'}
  .field
    = f.button :submit, "提交",:class => 'btn btn-default .btn-form-crt'
