%meta{:name=>"viewport", :content=>"width=device-width"}
.article-details
  %ul.nav.nav-pills
    %li
      %a{:role => "presentation", :href => "/articles"}
        %span
          文章
  .article-title
    %h3
      = @article.title
    .sign-article
      = @article.created_at.strftime("%B #{@article.created_at.day.ordinalize}, %Y")  
      %a{:href => "/cards/#{current_user.card.id}"}= current_user.name
      <--点击蓝字关注
  .article-picture
    %img{src: "/#{@article.picture}",height:200}
  .article-text-body
    %p
      = @article.text_body