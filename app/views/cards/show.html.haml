.page-show-card
  %h2 个人名片展示页
  %hr
  .card-area-head-field
    %img{:src=>"/#{@card.head_url}",:class=>"img-circle card-head-img"}
  .card-area-content-field
    %span 手机号：
    %span #{@card.phone_num}
  .card-area-content-field
    %span 单位：
    %span #{@card.company}
  .card-area-content-field
    %span qq：
    %span #{@card.qq_code}
  .card-area-qr_img_url-field
    %img{:src=>"/#{@card.qr_img_url}",:class=>" card-head-img"}
  %hr
  %h3 给我留言
  = simple_form_for @message do |f|
    .field
      = f.input :name, input_html:{:class => 'form-control',placeholder: '您的名字'}
    .field
      = f.input :phone_num, input_html:{:class => 'form-control', placeholder: '您的手机号'}
    .field
      = f.input :context, input_html:{:class => 'form-control', placeholder: '内容',type:'password'}
    .field.hidden
      = f.input :user_id, input_html:{:value => @card.user.id}
    .field
      = f.button :submit, "提交",:class => 'btn btn-default .btn-form-crt'